@model CustomerViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="createCustomer">
    <form asp-action="EditCustomer" asp-controller="Account">
        <div class="form-group">
            <input type="hidden" asp-for="CustomerID" value="@Model.Customer.CustomerId" />
            <input asp-for="Givenname" class="form-control" value="@Model.Customer.Givenname" />
            <span asp-validation-for="Givenname" class="text-danger"></span>

            <input asp-for="Surname" class="form-control" value="@Model.Customer.Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>

            <select asp-for="Gender" class="form-control">
                <option>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Streetaddress" class="form-control" value="@Model.Customer.Streetaddress" />
            <span asp-validation-for="Streetaddress" class="text-danger"></span>

            <input asp-for="City" class="form-control" value="@Model.Customer.City" />
            <span asp-validation-for="City" class="text-danger"></span>

            <input asp-for="Zipcode" class="form-control" value="@Model.Customer.Zipcode" maxlength="15" />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Country" class="form-control" value="@Model.Customer.Country" />
            <span asp-validation-for="Country" class="text-danger"></span>

            <input asp-for="CountryCode" class="form-control" value="@Model.Customer.CountryCode" maxlength="2" />
            <span asp-validation-for="CountryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="date" asp-for="Birthday" class="form-control" value="@Model.Customer.Birthday" />
            <span asp-validation-for="Birthday" class="text-danger"></span>

            <input asp-for="NationalId" class="form-control" value="@Model.Customer.NationalId" />
            <span asp-validation-for="NationalId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Telephonecountrycode" class="form-control" value="@Model.Customer.Telephonecountrycode" />
            <span asp-validation-for="Telephonecountrycode" class="text-danger"></span>

            <input asp-for="Telephonenumber" class="form-control" value="@Model.Customer.Telephonenumber" maxlength="25" />
            <span asp-validation-for="Telephonenumber" class="text-danger"></span>

            <input asp-for="Emailaddress" class="form-control" value="@Model.Customer.Emailaddress" />
            <span asp-validation-for="Emailaddress" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="standard-button">Submit</button>
        </div>
    </form>
    @if (TempData["Message"] != null)
    {
        <p>@TempData["Message"]</p>
    }
</div>