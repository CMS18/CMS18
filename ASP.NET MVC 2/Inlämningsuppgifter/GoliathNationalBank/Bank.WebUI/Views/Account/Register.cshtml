@model AccountViewModel

<div id="register">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="@Model.Username"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="PasswordCheck" type="password" placeholder="verify password" />
        </div>
        <div class="form-group">
            <input type="radio" asp-for="Role" id="ADMIN" value="ADMIN" />
            Admin

            <input type="radio" asp-for="Role" id="CASHIER" value="CASHIER" />
            Cashier
        </div>
        <button type="submit" class="standard-button">Add user</button>
    </form>
</div>
<p>@ViewData["Message"]</p>