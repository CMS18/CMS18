@model PostViewModel
@{
    ViewData["Title"] = "Blog";
}


<section>
    <div class="search">
        <form asp-action="Search" method="post">

            <input class="title-search" type="text" placeholder="Search..." asp-for="SearchValue" />

            <input type="submit" class="btn btn-light" value="Search" />

        </form>
    </div>
</section>

@foreach (var post in Model.BlogPosts)
{
    <section>
        <div class="postHeader">
            <a asp-action="ViewPost" asp-route-id="@post.PostId"><span class="header">@post.PostHeader</span></a>
            <span class="date">@post.DatePosted.ToString("g") <a asp-controller="Home" asp-action="Remove" asp-route-id="@post.PostId"><i class="fas fa-trash-alt"></i></a></span>

        </div>
        <div class="postContext">
            <a asp-action="ViewPost" asp-route-id="@post.PostId"><span class="context">@post.PostBreadText</span></a>
        </div>
    </section>
} 
