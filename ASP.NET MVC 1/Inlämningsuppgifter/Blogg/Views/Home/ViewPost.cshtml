@{
    ViewData["Title"] = "Blog";
}


<section>
    <div class="postHeader">
        <span class="header">@Model.PostHeader</span>
        <span class="date">@Model.DatePosted.ToString("g") <a asp-controller="Home" asp-action="Remove" asp-route-id="@Model.PostId"><i class="fas fa-trash-alt"></i></a></span>

    </div>
    <div class="postBread">
        <span>@Model.PostBreadText</span>
    </div>
</section>
