@model DemoASPNETCoreFormulär3.ViewModels.PersonViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form asp-controller="Home" asp-action="CreatePerson" method="post">


    <label asp-for="@Model.CurrentPerson.Name"></label>
    <input type="text" asp-for="@Model.CurrentPerson.Name" />

    <br />    <br />
    <label asp-for="@Model.CurrentPerson.RegionID"></label>
    <br />

    <!--Lägg till attributet  multiple="multiple" för att visa det som en listbox istället-->
    <select asp-for="@Model.CurrentPerson.RegionID" asp-items="@Model.Regions"></select>


    <br />
    <br />
    <label asp-for="@Model.CurrentPerson.PersonTypeID"></label>
    <br />
    @foreach (var personType in Model.PersonTypes)
    {

        <input type="radio" value="@personType.PersonTypeID" asp-for="@Model.CurrentPerson.PersonTypeID" />@personType.Name

    }


    <br /><br />

    <input type="submit" value="Spara" />
</form>


